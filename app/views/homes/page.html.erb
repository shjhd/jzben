<head>
	<style type="text/css">
	*{
		margin: 0;
		padding: 0;
	}
	.index-bg{
		width: 100%;
		height: 100%;
		background:url("<%= image_path('index-bg01.jpg')%>") no-repeat  center center fixed;
	}
	.index-table{
		width: 600px;
		height: 500px;
		background: rgba(255, 255, 255, 0.59);
		position: absolute;
		left: 0;top: 0;right: 0;bottom: 0;
		margin: auto;
	}
	</style>
</head>
<div class='index-bg'>
	<div class='index-table'>
		<%= bootstrap_form_for(:session, url: sessions_path) do |f| %>

    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.submit "登入",:class=>"btn btn-primary btn-form" %>

<% end %>
	</div>
</div>