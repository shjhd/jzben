<%= render 'form' %>
<table class="table table-striped table-hover my-table">
  <tr>
    <th>日期</th>
    <th>类型</th>
    <th>分类</th>
    <th>金额</th>
    <th>说明</th>
    <th></th>
  </tr>

  <% Item.all.each do |item| %>
    <tr class="danger">
      <td><%= item.time %></td>
      <td><%= item.lei %></td>
      <td><%= item.way %></td>
      <td><%= item.price %></td>
      <td><%= item.ps %></td>
      <td><%= link_to '', edit_item_path(item),:class=>"glyphicon glyphicon-pencil" %>
          <%= link_to '', item, method: :delete, data: { confirm: 'Are you sure?' },:class=>"glyphicon glyphicon-remove" %>
      </td>
    </tr>
  <% end %>
</table>