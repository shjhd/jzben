<div class="btn-group btn-group-justified new-panel">
  <a href="#" class="btn btn-primary active">收支统计</a>
  <%= link_to '年度报表', yeartable_path,:class=>"btn btn-primary" %>
  <%= link_to '对账单', matchtable_path,:class=>"btn btn-primary" %>
</div>

<div class="panel panel-default new-panel">
  <div class="panel-heading">
    <select>
      <option>2014</option>
      <option>2015</option>
      <option>2016</option>
    </select>
    <a class="a-left" href="#"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span></a>
    <a href="#" class="jan">1月</a>
    <a href="#" id="feb">2月</a>
    <a href="#" class="mat">3月</a>
    <a href="#" class="apr">4月</a>
    <a href="#" class="may">5月</a>
    <a href="#"><span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span></a>

    <a href="#" class="btn btn-default btn-xs a-left">本年</a>
    <a href="#" class="btn btn-default btn-xs">本季</a>
    <a href="#" class="btn btn-default btn-xs">时间范围</a>
  </div>
  <div id="payget" class="panel-body" style="height:400px">
    Panel content
  <script type="text/javascript">
    require.config({
      paths: {
          echarts: './js/dist'
      }
    });
    require(
      [
        'echarts',
        'echarts/chart/pie'
      ],
    function (ec) {
      var myChart = ec.init(document.getElementById('payget'));
      var jsonLei=['支出','收入','支出','收入','支出','收入'];
      var jsonPrice=['268','767','342','875','1280','2313'];
      var option = {
      tooltip : {
        trigger: 'them'
        },
        legend: {
            orient: 'vertical',
            x:'left',
            y:'top',
            data:['支出','收入']
        },
        toolbox: {
            show : true,
            feature : {
                dataView : {show: true, readOnly: false},
                magicType : {show: true, type: ['line', 'bar']},
                restore : {show: true},
                saveAsImage : {show: true}
            }
        },
        series : [
            {
              name:'收支统计',
              type:'pie',
              center: ['50%', '60%'],
              radius: [0, '70%'],
              selectedMode:'single',
              data:(function(){
                var res=[];
                var len=-1;
                while (len++< 1){
                  res.push({
                    name:jsonLei[len],
                    value:jsonPrice[len]
                  })
                }
                document.getElementById("feb").onclick=function(){
                  var ret=[];
                  var len=1;
                  while (len++< 3){
                  ret.push({
                    name:jsonLei[len],
                    value:jsonPrice[len]
                  })
                }
                return ret;
                }
                return res;
              })()
            }
        ],
        color:['#c476de','#14b8f5','#f424d4','#f4ca24','#ef6e51']
                  }
        myChart.setOption(option);
    }
);
</script>
  </div>
</div>
